{
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "editor.codeActionsOnSave": {
        "source.addMissingImports.ts": "always",
        "source.fixAll.eslint": "always",
    },
    "eslint.enable": true,
    "eslint.format.enable": true,
    "eslint.options": {
        "overrideConfigFile": "./eslint.config.mjs"
    },
    "files.exclude": {
        "**/.angular": true,
        "**/.idea": true,
        "**/node_modules": true
    },
    "eslint.quiet": true, // Le mode silent n'affiche pas les warnings, mais permet de quand meme faire les autofixes
}